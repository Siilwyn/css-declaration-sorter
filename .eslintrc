{
  "extends": "eslint:recommended",

  "env": {
    "node": true
  },

  "rules": {
    "callback-return": [2],
    "comma-spacing": [2],
    "eqeqeq": [2],
    "handle-callback-err": [2],
    "indent": [2, 2],
    "no-console": [0],
    "no-extra-semi": [2],
    "no-mixed-requires": [2],
    "no-sync": [2],
    "no-trailing-spaces": [2],
    "no-useless-call": [2],
    "no-warning-comments": [2],
    "object-curly-spacing": [2, "always"],
    "semi": [2],
    "space-before-function-paren": [2],
    "space-in-parens": [2],
    "strict": [2, "global"],
    "vars-on-top": [2],
    "yoda": [2]
  }
}
